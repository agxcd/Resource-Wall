<% for (const post of posts) { %> 
<article class="post-body">
  <div class="card box">
    <div class="card-img-top image_edit">
      <a href="/api/post/<%= post.id %>">
        <img
          src="<%= post.thumbnail_photo %>"
          alt="image"
          class="thumbnail box_img"
        />
      </a>
    </div>
    <div class="card-body">
      <h5 class="title post-title"><%= post.title %></h5>
      <p class="card-text description post-description">
        <%= post.description.substring(0,40) + '......' %>
      </p>
    </div>
    <footer class="flex-row-space-center post-footer">
      <div class="flex-row-center ml-2">
        <img
          src="https://avataaars.io/?avatarStyle=Circle&topType=ShortHairDreads01&accessoriesType=Round&hairColor=Auburn&facialHairType=Blank&clotheType=Overall&clotheColor=Black&eyeType=Dizzy&eyebrowType=RaisedExcitedNatural&mouthType=Serious&skinColor=Light"
          class="avatar mb-2"
          style="width: 2rem"
        />
        <p class="post-owner mt-2 ml-2"><%= post.username %></p>
      </div>
      <div class="flex-row-center mt-2">
        <p class="rating mr-2">
          <%= post.rating %>/5
          <i class="fa fa-star mr-2"></i>
        </p>
        <p class="liked mr-2">
          <% if (post.is_liked) { %>
            <p>liked</p>
            <% } %>
          <i class="fa fa-heart mr-2 liked"></i>
        </p>
      </div>
    </footer>
  </div>
</article>
<% } %>
