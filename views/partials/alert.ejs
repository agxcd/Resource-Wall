<script type="text/javascript" src="/scripts/alert.js"></script>

<section
  class="modal fade"
  id="alert"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1>Alert</h1>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body" id="alert">
        <p>ARE YOU SURE YOU WANT TO DELETE THIS POST?</p>
        <div class="action_btn flex-row-space">
          <button class="btn btn-outline-warning" id="delete-submit">
            Yes
          </button>
          <button class="btn btn-outline-secondary" id="cancel">No</button>
        </div>
      </div>
    </div>
  </div>
</section>
